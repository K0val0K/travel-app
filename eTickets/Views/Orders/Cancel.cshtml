@using eTickets.Data.ViewModels
@model OrderVM

@{
    ViewData["Title"] = "Order cancellation";
    var cancellationType = ViewData["CancellationType"] as string;
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Edit tour order</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                @if(cancellationType == "Cancel") {
                <form asp-action="Cancel">
                    <div class="form-group">
                        <label asp-for="Comment" class="control-label"></label>
                        <textarea asp-for="Comment" class="form-control"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                         <a class="btn btn-secondary" asp-area="" asp-controller="Orders" asp-action="Index"> Go back</a>
                    </div>
                </form>
                }
                else {
                    <form asp-action="Reject">
                    <div class="form-group">
                        <label asp-for="Comment" class="control-label"></label>
                        <textarea asp-for="Comment" class="form-control"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                         <a class="btn btn-secondary" asp-area="" asp-controller="Orders" asp-action="Index"> Go back</a>
                    </div>
                </form>
                }
               
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
    </script>
}